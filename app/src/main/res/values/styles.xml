<resources>

    <style name="Widget.Theme.Quiz.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <style name="CustomTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/FontSize8x</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="fontStyle">normal</item>
    </style>


    <style name="text_in_card">
        <item name="android:textSize">@dimen/medum_text_size</item>
        <item name="android:elevation">@dimen/dim2</item>
    </style>

    <!--    All Text Styles-->
    <!--    Question Text Styles-->
    <style name="QuestionTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/FontSize10x</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!--    Choice Text Styles-->
    <style name="ChoiceTextStyle">
        <item name="android:textSize">@dimen/FontSize8x</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChoiceTextStyle.SelectedBody">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChoiceTextStyle.NotSelectedBody">
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="ChoiceTextStyle.NotSelectedAlphabet">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="ChoiceTextStyle.SelectedAlphabet">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/circle_white</item>
    </style>

    <style name="ChoiceTextStyle.SelectedAlphabet.Correct">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="ChoiceTextStyle.SelectedAlphabet.Wrong">
        <item name="android:textColor">@color/red</item>
    </style>


    <!--Button Text Styles-->
    <style name="ButtonTextStyle" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/FontSize7x</item>
    </style>

    <style name="ButtonTextStyle.Main">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/green_button_background</item>
    </style>

    <style name="ButtonTextStyle.Second">
        android:textColor="@color/green"
        <item name="android:textColor">@color/green</item>
        <item name="android:background">@drawable/white_button_background</item>
    </style>

    <!--    Dialog Text Styles-->
    <style name="DialogTextStyle" parent="TextAppearance.AppCompat"></style>

    <style name="DialogTextStyle.Head">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/FontSize9x</item>
    </style>

    <style name="DialogTextStyle.Title">
        <item name="android:textSize">@dimen/FontSize8x</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTextStyle.SubTitle">
        <item name="android:textSize">@dimen/FontSize7x</item>
        <item name="android:textColor">@color/gray</item>
    </style>


</resources>